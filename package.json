{
  "name": "ai-pdf-reader",
  "version": "2.0.0",
  "description": "AI-powered bilingual PDF reader with intelligent translation",
  "main": "src/main/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "concurrently -k -n VITE,ELECTRON -c cyan,magenta \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "test": "node test/test-api.js",
    "test:api": "node test/test-api.js",
    "test:utf8": "node test/verify-fix.js",
    "vite:dev": "vite",
    "vite:build": "tsc && vite build",
    "vite:preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "build": "npm run vite:build && electron-builder",
    "build:win": "npm run vite:build && electron-builder --win",
    "build:mac": "npm run vite:build && electron-builder --mac",
    "build:linux": "npm run vite:build && electron-builder --linux",
    "build:all": "npm run vite:build && electron-builder --win --mac --linux"
  },
  "keywords": [
    "pdf",
    "translation",
    "ai",
    "electron",
    "reader"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "dotenv": "^16.6.1",
    "pdfjs-dist": "^5.4.394",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
